---
import EventosSecClient from "./react/EventosSecClient";

// Detectar idioma usando Astro.currentLocale (maneja correctamente el base)
const idioma = (Astro.currentLocale ?? "fr") as "en" | "fr";

// URLs por idioma
const API_FR = "https://esscrans-montana.ch/wp-json/wp/v2/posts?categories=45";
const API_EN =
  "https://esscrans-montana.ch/en/wp-json/wp/v2/posts?categories=45";

const apiUrl = idioma === "en" ? API_EN : API_FR;

// Texto del filtro "todos"
const allLabel = idioma === "fr" ? "Tous" : "All";
---

<div class="grid contenido">
<div>

  <EventosSecClient client:load apiUrl={apiUrl} allLabel={allLabel} />
</div>
</div>
