---
/**
 * Botón reutilizable para Astro.
 *
 * Props:
 *  - url: string – destino del enlace (puede ser una URL externa o interna).
 *  - text: string – texto que se mostrará dentro del botón.
 *  - class: string (opcional) – clases CSS adicionales para personalizar el estilo.
 */
import { Icon } from "astro-icon/components";

// Props del botón. "icon" es opcional y recibe el nombre del icono tal como lo usa astro-icon.
interface Props {
  url: string;
  text: string;
  class?: string;
  icon?: string; // e.g. "mdi:home" o "heroicons:solid:arrow-right"
}

const { url, text, class: extraClass = '', icon } = Astro.props as Props;
---

<a href={url} class={`btn ${extraClass}`}>
  {text}
  {icon && <Icon name={icon} class="icon" />}
</a>

<style lang="scss">
  @use "../styles/variables.scss" as *;

  .btn {
    display: inline-block;
    padding: 0.6rem 1.2rem;
    font-size: 1rem;
    color: $fondo;
    background-color: $rojo;
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: background-color 0.3s ease, color 0.3s ease;

    &:hover {
      background-color: $fondo;
      color: $rojo;
    }
  }

  .icon {
    vertical-align: middle;
    margin-left: 0.4rem;
    width: 1em;
    height: 1em;
  }
  .linea{
    border: solid 1px $dorado!important;
    background-color: transparent!important;
    color: $rojo!important;
    font-weight: 600!important;
  }
</style>
