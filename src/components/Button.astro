---
/**
 * Bot√≥n reutilizable para Astro.
 */
import { Icon } from "astro-icon/components";

interface Props {
  url?: string;
  text: string;
  class?: string;
  icon?: string;
  onclick?: string; // handler onclick como string
  type?: "button" | "link"; // tipo de elemento
}

const { url, text, class: extraClass = '', icon, onclick, type = "link" } = Astro.props as Props;
---

{type === "button" ? (
  <button 
    class={`btn ${extraClass}`}
    onclick={onclick}
  >
    {text}
    {icon && <Icon name={icon} class="icon" />}
  </button>
) : (
  <a 
    id="boton"
    href={url} 
    class={`btn ${extraClass}`}
  >
    {text}
    {icon && <Icon name={icon} class="icon" />}
  </a>
)}

