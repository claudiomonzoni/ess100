---
import EventosPrincipalClient from "./react/EventosPrincipalClient";

// Detectar idioma desde la URL
const idioma = Astro.url.pathname.startsWith("/en/") ? "en" : "fr";

// URLs por idioma
const API_FR = "https://esscrans-montana.ch/wp-json/wp/v2/posts?categories=45";
const API_EN =
  "https://esscrans-montana.ch/en/wp-json/wp/v2/posts?categories=45";

const apiUrl = idioma === "en" ? API_EN : API_FR;
---

<div class="grid contenido">
  <div id="contenedorCardsEventoPrincipal">
    <EventosPrincipalClient client:load apiUrl={apiUrl} />
  </div>
</div>
