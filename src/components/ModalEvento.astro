---
import { Icon } from "astro-icon/components";
import Fecha from "./Fecha.astro";

interface Props {
  isOpen: boolean;
  title: string;
  imageUrl?: string;
  contenidoCompleto: string;
  pdfUrl?: string;
  fechaEvento?: string;
  subcategoria?: string;
  onClose: () => void;
}

const {
  isOpen,
  title,
  imageUrl,
  contenidoCompleto,
  pdfUrl,
  fechaEvento,
  subcategoria,
  onClose,
} = Astro.props;
const icons = subcategoria ? subcategoria.toLowerCase() : "mdi:event-available";
---

{
  isOpen && (
    <div
      class="modal"
      onclick="if(event.target.id === 'modal-evento') this.style.display='none'"
    >
      <div class="modal-contenido">
        <span
          class="cerrar"
          onclick="this.closest('.modal').style.display='none'"
        >
          &times;
        </span>

        <div class="encabezado">
          {(fechaEvento || subcategoria) && (
            <div class="modal-meta">
              {fechaEvento && <Fecha fecha={fechaEvento} />}
            </div>
          )}

          <div class="thetitle">
            <h2>{title}</h2>
            <div class="sub">
              <Icon name={icons} class="icon" />
              {subcategoria && <span class="categoria"> {subcategoria}</span>}
            </div>
          </div>
        </div>
        <div class="bandeja">
          <div class="laimg">
            {imageUrl && <img src={imageUrl} alt={title} />}
          </div>
          <div class="elp">
            {contenidoCompleto && <div set:html={contenidoCompleto} />}
          </div>
        </div>

        {pdfUrl && (
          <div class="modal-pdf">
            <a href={pdfUrl} target="_blank" download>
              ðŸ“„ Descargar PDF
            </a>
          </div>
        )}
      </div>
    </div>
  )
}

<style lang="scss">
  @use "../styles/variables.scss" as *;

  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeIn 0.3s ease-in-out;
    overscroll-behavior: contain;
    overflow: hidden;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .modal-contenido {
    background: white;
    width: 90%;
    max-width: 70vw;
    max-height: 90vh;
    overflow-y: auto;
    padding: 3rem;
    position: relative;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    overscroll-behavior: contain;
    overflow: hidden;
    @include cel {
      width: 100%;
      max-width: 88vw;
      max-height: 93vh;
    }
  }

  .encabezado {
    display: flex;
    justify-content: space-between;
    gap: 2rem;

    .modal-meta {
      flex: 1;
      background: $fondo;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100%;
    }

    .thetitle {
      flex: 3;
      display: flex;
      flex-direction: column;
      justify-content: right;
      align-items: right;
    }
    @include cel {
      flex-wrap: wrap;
      .thetitle,
      .modal-meta {
        flex: 1 0 100%;
      }
      .thetitle {
        align-items: left;
        h2 {
          text-align: left;
        }
      }
      .sub {
        text-align: left;
        justify-content: left;
        padding-bottom: 1rem;
      }
    }
  }
  h2 {
    margin-top: 0;
    color: $dorado;
    text-align: right;
  }

  .cerrar {
    position: absolute;
    top: 1rem;
    right: 1rem;
    font-size: 2rem;
    cursor: pointer;
    transition: transform 0.2s;

    &:hover {
      transform: scale(1.2);
    }
  }

  .sub {
    display: flex;
    padding: 0.5rem 0;
    font-size: clamp(1rem, 1.2vw, 1.2rem);
    align-items: center;
    justify-content: right;
    gap: 1rem;
  }
  .icon {
    width: 2rem;
    height: auto;
  }
  .bandeja {
    border-top: solid 1px $gris;
    border-bottom: solid 1px $gris;
    padding: 2rem 0;
    display: flex;
    gap: 2rem;
    @include cel {
      flex-wrap: wrap;
    }
    :global(.laima) {
      flex: 1 0 40%;
      img {
        width: 100%;
        height: auto;
        object-fit: cover;
      }
      @include cel {
        flex: 1 0 100%;
      }
    }
    :global(.elp) {
      flex: 1 0 60%;
      // line-height: 1.6;
      // color: $gris;
      @include cel {
        flex: 1 0 100%;
      }
    }
  }

  .modal-pdf {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #eee;
  }

  .elp {
    :global(a) {
      display: inline-block;
      padding: 0.75rem 1.5rem;
      background: #ee3124;
      color: white;
      text-decoration: none;
      transition: background 0.3s;
      margin-top: 1rem;

      &:hover {
        background: $dorado;
        color: white;
      }
    }
  }


</style>
