---
import Layout from "@layouts/Layout.astro";
import Loader from "@components/Loader.astro";
import Hero from "@components/Hero.astro";
import Button from "@components/Button.astro";
import Encabezados from "@components/Encabezados.astro";
import Teaser from "@components/Teaser.astro";
import ContenedorEventosPrincipal from "@components/ContenedorEventosPrincipal.astro";
import ContenedorEventosSec from "@components/ContenedorEventosSec.astro";
---

<Layout
  title="100 aniversary Ess Ski school Crans Montana"
  description="Welcome to the home page"
>
  <!-- <Loader loadingText="Historique de chargement" /> -->
  <main>
    <Hero title="100 ans d’histoire… ça se fête !!" subtitle="1926-2026" />

    <Encabezados title="Teaser" subtitle="100 ans avec vous" />
    <div class="grid contenido">
      <Teaser
        span="REVIVEZ"
        title="100 ANS"
        subtitle="d'histoire EN 1 MINUTE"
        videoSrc="/video/hero.mp4"
      />
    </div>

    
    
    <Encabezados
      title="Calendrier"
      subtitle="des événements"
      extra="100 ans, ça se fête!"
    />
    
    <div class="grid pantalla" id="events">
      <ContenedorEventosPrincipal />
      
    </div>
    
    <div class="grid pantalla" id="events2">
    <ContenedorEventosSec />
    </div>


  </main>
</Layout>
